

<%=link_to 'Задать вопрос', new_question_path, class:"btn btn-primary" %>

<% if not @top_questions.empty? %>
  <% @top_questions.each do |question| %>
    <div class="card border-0">
      <div class="col mt-3" >
        <h5 style="text-align: center">
          <%= link_to question.head, question %>
        </h5>
        <p class="card-text pl-2 pr-3" style="text-align: center">
          <%= truncate question.body, length:40 %>
        </p>
      </div>
    </div>
  <% end %>
<% else %>
  <p>Вопросов пока нет</p>
<% end %>





